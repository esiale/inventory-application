<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <div class="wrapper">
      <%- include('./partials/header'); %>
      <main>
        <%- include('./partials/nav'); %>
        <div class="content">
          <h1>Viewing product's details</h1>
          <h2>ID: <%= result._id %></h2>
          <div class="detail-container">
            <div class="detail-text">
              <h3>Format:</h3>
              <a href="<%= result.format.url %>"><%= result.format.name %></a>
              <h3>Album:</h3>
              <a href="<%= result.album.url %>"><%= result.album.name %></a>
              <h3>Artist:</h3>
              <a href="<%= result.album.artist.url %>"
                ><%= result.album.artist.name %></a
              >
              <h3>Number in stock:</h3>
              <%= result.number_in_stock%>
              <h3>Price:</h3>
              <%= result.price %>$
            </div>
            <img src="<%= result.album.picture_url %>" />
          </div>
          <div class="button-container">
            <a href="<%=result.url%>/update"><button>Update</button></a>
            <a href="<%=result.url%>/delete"><button>Delete</button></a>
          </div>
        </div>
      </main>
      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
