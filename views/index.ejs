<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <div class="wrapper">
      <%- include('./partials/header'); %>
      <main>
        <%- include('./partials/nav'); %>
        <div class="content">
          <div class="listing">
            Currently listing <%= product_count %> products.
          </div>
          <div class="product-list">
            <% product_list.forEach((product) => { %>
            <div class="product-list-entry">
              <a href="<%= product.url %>">
                <div class="product-list-entry-info">
                  <%= product.format.name %> - <%= product.album.name %> - <%=
                  product.artist.name %>
                </div>
              </a>
              <div class="product-list-entry-stock">
                Number in stock: <%= product.number_in_stock %>, price: <%=
                product.price %>$
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </main>
      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
