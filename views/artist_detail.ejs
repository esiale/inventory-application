<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <div class="wrapper">
      <%- include('./partials/header'); %>
      <main>
        <%- include('./partials/nav'); %>
        <div class="content">
          <h1>Viewing artist's details</h1>
          <h2><%= artist_detail.name %></h2>
          <div class="detail-container">
            <div class="detail-text">
              <h3>Albums:</h3>
              <% if(!albums.length) { %> This artist has no albums. <%} else {%>
              <ul>
                <% albums.forEach((album) => { %>
                <li><a href="<%= album.url %>"><%= album.name %></a></li>
                <%})%>
              </ul>
              <%}%>
            </div>
            <img src="<%= artist_detail.picture_url %>" />
          </div>
          <div class="detail-list">
            <h2>Listing products:</h2>
            <% if (!products.length) { %> Currently there's no products for this
            artist. <%} else { %>
            <ul>
              <% products.forEach((product) => { %>
              <li>
                <a href="<%= product.url %>"
                  ><%= product.product_info.format.name %> - <%= product.name %>
                  - <%=product.product_info._id%></a
                >
              </li>
              <%})%>
            </ul>
            <%}%>
            <div class="button-container">
              <a href="<%=artist_detail.url%>/delete"><button>Delete</button></a>
              <a href="<%=artist_detail.url%>/update"><button>Update</button></a>
            </div>
      </main>
      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
