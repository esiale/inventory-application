<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <div class="wrapper">
      <%- include('./partials/header'); %>
      <main>
        <%- include('./partials/nav'); %>
        <div class="content">
          <h1>Add new format</h1>
          <form method="post" action="">
            <label for="name">Format:</label>
            <input
              type="text"
              placeholder="Name"
              name="name"
              value="<%=!locals.format ? '': format.name %>"
            />
            <button type="submit">Submit</button>
          </form>
          <ul>
            <% if (locals.errors) { errors.forEach((error) => { %>
            <li class="error"><%=error.msg%></li>
            <%}) } %>
          </ul>
        </div>
      </main>
      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
