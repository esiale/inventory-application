<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <div class="wrapper">
      <%- include('./partials/header'); %>
      <main>
        <%- include('./partials/nav'); %>
        <div class="content">
          <h1>Viewing format's details</h1>
          <h2><%= format_detail.name %></h2>
          <div class="detail-list">
            <h2>Listing products:</h2>
            <% if (!products.length) { %> Currently there's no products for this
            format. <%} else { %>
            <ul>
              <% products.forEach((product) => { %>
              <li>
                <a href="<%= product.url %>"
                  ><%= format_detail.name %> - <%= product.album.name %> - <%=
                  product.album.artist.name %> - <%=product._id%></a
                >
              </li>
              <%})%>
            </ul>
            <%}%>
          </div>
          <a href="<%=format_detail.url%>/delete"
            ><button class="delete-btn">Delete</button></a
          >
        </div>
      </main>
      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
