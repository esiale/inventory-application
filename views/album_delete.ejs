<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <div class="wrapper">
      <%- include('./partials/header'); %>
      <main>
        <%- include('./partials/nav'); %>
        <div class="content">
          <h1>Delete an album:</h1>
          <h2><%= album.name %> - <%=album.artist.name %></h2>
          <% if (products.length) { %>
          <div class="delete-item">
            This album has the following associated products:
            <ul>
              <% products.forEach((product) => { %>
              <li>
                <a href="<%=product.url%>"
                  ><%= product.format.name %> - <%= product._id %></a
                >
              </li>
              <%})%>
            </ul>
            <span class="warning"
              >You have to delete all products before proceeding.</span
            >
          </div>
          <%} else {%>
          <form method="POST" action="">
            <span class="warning"
              >This action can't be reversed! Are you sure?</span
            >
            <div class="button-container">
              <button type="submit">Delete</button>
              <a href="<%=album.url%>"><button type="button">Cancel</button></a>
            </div>
          </form>
          <%}%>
        </div>
      </main>
      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
